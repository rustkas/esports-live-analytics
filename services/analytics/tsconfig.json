{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "baseUrl": "../..",
        "paths": {
            "@esports/shared": [
                "packages/shared/src"
            ],
            "@esports/shared/*": [
                "packages/shared/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}