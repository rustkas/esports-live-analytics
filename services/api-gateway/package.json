{
    "name": "@esports/api-gateway",
    "version": "1.0.0",
    "description": "API Gateway - REST, GraphQL, and WebSocket subscriptions",
    "type": "module",
    "main": "./src/index.ts",
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "start": "bun run src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target node",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@esports/shared": "workspace:*",
        "@graphql-tools/schema": "^10.0.3",
        "graphql": "^16.8.1",
        "graphql-yoga": "^5.1.1",
        "hono": "^4.0.0",
        "ioredis": "^5.3.2",
        "pg": "^8.11.3"
    },
    "devDependencies": {
        "@types/pg": "^8.11.0",
        "bun-types": "^1.0.25",
        "typescript": "^5.3.3"
    }
}